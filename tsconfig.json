{
    "extends": "@tsconfig/node18/tsconfig.json",
    "ts-node": {
        // Tell ts-node CLI to install the --loader automatically
        "esm": true,
    },
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
    },
}
